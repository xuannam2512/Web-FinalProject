<h3 style="text-align: center;">{{title}}</h3>
<br><br>

<div class="row">
    <div class="col-sm-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{img1}}" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{img2}}" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{img3}}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="container">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Screen</span>
                    <span>{{screen}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Operator System</span>
                    <span>{{operatorsystem}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Front Camera</span>
                    <span>{{camerafont}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Behind Camera</span>
                    <span>{{camerabehind}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>CPU</span>
                    <span>{{cpu}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>RAM</span>
                    <span>{{ram}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Memories</span>
                    <span>{{memories}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Memory card</span>
                    <span>{{memorycard}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Sim</span>
                    <span>{{sim}}</span>
                </li>                
            </ul>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h5>Comment</h5>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Message</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each tables}}
                <tr>
                    <td>{{this.info.fullname}}</td>
                    <td>{{this.message}}</td>
                    <td>
                        <a href="">
                            <button type="button" class="btn btn-primary">
                                Edit
                            </button>
                        </a>
                        <a href="">
                            <button type="button" class="btn btn-danger">
                                Delete
                            </button>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <!-- /.panel-body -->
</div>