{{#if showError}}
    {{#each error_msg}}
        <div class="alert alert-danger">
            {{this}}
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
        {{/each}}
    {{/if}}
    {{#if showSuccess}}
    {{#each success_msg}}
        <div class="alert alert-success">
            {{this}}
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
        {{/each}}
    {{/if}}
<div class="container bg-light mt-md-3 rounded border">
    <br>
    <div class="ml-md-3">
        <h4>{{mobileName}}</h3>
    </div>
    <hr>
    <br>
    <div class="row">
        <div class="col-5 mr-md-2 ml-md-4 border">
            <div class="row text-center">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" height="370" src="{{img1}}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" height="370" src="{{img2}}" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" height="370" src="{{img3}}" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <br>
            <h5>Giá: {{price}} <u>đ</u></h5>
            <button class="btn btn-warning w-100">
                <b style="font-size: 25px;">Mua Ngay</b>
            </button>
            <br><br>
        </div>
        <div class="col">
            <div class="container">
                <h5>Cấu hình chi tiết</h5>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Screen</span>
                        <span>{{screen}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Operator System</span>
                        <span>{{operator}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Front Camera</span>
                        <span>{{frontCamera}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Behind Camera</span>
                        <span>{{behindCamera}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>CPU</span>
                        <span>{{cpu}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>RAM</span>
                        <span>{{ram}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Memories</span>
                        <span>{{memories}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Memory card</span>
                        <span>{{memorycard}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Sim</span>
                        <span>{{sim}}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br>
</div>
<div class="rounded bg-light container mt-md-3 border">
    <h4 class="mt-md-3 ml-md-2">Sản phẩm cùng nhà cung cấp</h4>
    <hr>
    <br>
    <div class="row">
        {{#each mobile}}
        <div class="col-sm-4">
            <div class="card mt-md-3 mb-md-3">
                <img class="card-img-top" src="{{this.imgDisplay}}" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">{{this.mobileID.mobileName}}</h4>
                    <p><b>Giá: {{this.mobileID.salePrice}} <u>đ</u></b></p>
                    <p class="card-text">Màn hình: {{this.screen}}</p>
                    <p class="card-text">Cpu: {{this.cpu}}</p>
                    <a href="#" class="btn btn-danger">Thêm giỏ hàng</a>
                    <a href="/dien-thoai/{{this.mobileID._id}}" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="rounded bg-light container mt-md-3 border">
    <h4 class="mt-md-3 ml-md-2">Ý kiến khác hàng</h4>
    <hr>
    <form action="" method="POST">
        <textarea name="message" class="form-control" rows="4" id="comment" placeholder="Mời bạn để lại bình luận" required></textarea>
        <div class="float-right mt-md-3 w-25">
            <button class="btn btn-danger w-100">
                <b>Gửi</b>
            </button>
        </div>
    </form>
    <br><br>
    <hr>
    {{#each comments}}
    <div class="mt-md-3">
        <div class="row">
            <div class="col-sm-1 text-center">
                <img class="rounded border" src="{{this.info.imgDisplay}}" alt="" height="35" width="35">
            </div>
            <div class="col-sm-11">
                <b>{{this.info.fullname}} - <i>{{this.date}}</i></b>
                <p class="mt-md-2">{{this.message}}</p>
            </div>
        </div>
        <hr>
    </div>
    {{/each}}
    <br>
</div>
<br>