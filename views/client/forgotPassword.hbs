{{#if showError}}
    {{#each error_msg}}
        <div class="alert alert-danger">
            {{this}}
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
        {{/each}}
    {{/if}}
    {{#if showSuccess}}
    {{#each success_msg}}
        <div class="alert alert-success">
            {{this}}
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
        {{/each}}
    {{/if}}
<div class="container dounded mt-md-3 border bg-light">
    <h4 class="mt-md-3 ml-md-3">Quên mật khẩu</h4>
    <hr>
    <br>
    <form action="" method="POST">
        <label for="secretToken">
            <b>Email gửi xác thực</b>
        </label>
        <input type="text" class="form-control" placeholder="Nhập email để gửi mã xác thực" name="email" required>
        <br>
        <button class="btn btn-primary rounded border w-25"><b>Gửi</b></button>
    </form>
    <br>
</div>