<div class="container bg-light rounded border mt-md-3">
    <h4 class="mt-md-3 ml-md-3">Chi tiết hóa đơn</h4>
    <h4 class="mt-md-3 ml-md-3"><i>{{date}}</i></h4> 
    <hr><br>
    <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Tên Model</th>
                    <th>Số lượng</th>
                    <th>Nhà cung cấp</th>
                    <th>Đơn giá</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                {{#each tables}}
                <tr>
                    <td>{{this.mobiles.mobileName}}</td>
                    <td>{{this.amount}}</td>
                    <td>{{this.provider.name}}</td>
                    <td>{{this.mobiles.salePrice}}</td>
                    <td>
                        <a href="/dien-thoai/{{this.mobiles._id}}">chi tiết</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<br>